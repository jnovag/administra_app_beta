<%= form_for(@vehiculo) do |f| %>
  <% if @vehiculo.errors.any? %>
    <div id="error_explanation">
      <h2><%=  t('errors.template.header', model: 'Vehiculo', count: @vehiculo.errors.count) %></h2>

      <ul>
      <% @vehiculo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :placa %><br>
    <%= f.text_field :placa , class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= f.label :marca %><br>
    <%= f.text_field :marca , class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= f.label :color %><br>
    <%= f.text_field :color, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :descripcion %><br>
    <%= f.text_area :descripcion, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :apartamento_id %><br>
    <%= f.collection_select :apartamento_id, Apartamento.all, :id, :numero  %>
  </div>
  <div class="actions">
    <%= f.submit 'Guardar', class: 'btn btn'%>
  </div>
<% end %>
