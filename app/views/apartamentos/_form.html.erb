<%= form_for(@apartamento) do |f| %>
  <% if @apartamento.errors.any? %>
    <div id="error_explanation">
      <h2><%=  t('errors.template.header', model: 'Apartamento', count: @apartamento.errors.count) %></h2>

      <ul>
      <% @apartamento.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">  
    
    <div class="col-md-4 col-sm-6 col-xs-12">
      <div class="form-group">
        <%= f.label :numero %><br>
        <%= f.text_field :numero, class: 'form-control' %>
      </div>  
    </div>
    <div class="col-md-4 col-sm-6 col-xs-12">
      <div class="form-group">
        <%= f.label :torre %><br>
        <%= f.text_field :torre, class: 'form-control' %>
      </div>  
    </div>
    <div class="col-md-4 col-sm-6 col-xs-6">
      <div class="form-group">
        <%= f.label :piso %><br>
        <%= f.number_field :piso, class: 'form-control'%>
      </div>  
    </div>
    <div class="col-md-4 col-sm-6 col-xs-6">
      <div class="form-group">
        <%= f.label :area %><br>
        <%= f.number_field :area, class: 'form-control' %>
      </div> 
    </div>  

  </div>



  
  
  
  
  <div class="actions">
    <%= f.submit 'Guardar', class: 'btn btn-success' %>
  </div>
<% end %>
