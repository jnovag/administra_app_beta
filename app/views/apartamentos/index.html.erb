<p id="notice"><%= notice %></p>

<h4>Listing Apartamentos</h4>

<table class="table table-striped table-condensed table-hover">
  <thead>
    <tr>
      <th>Numero</th>
      <th>Torre</th>
      <th>Piso</th>
      <th>Area</th>
      <th>Nro habitantes</th>
      <th>Nro vehículos</th>
      <th>Valor Administración</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apartamentos.each do |apartamento| %>
      <tr>
        <td><%= apartamento.numero %></td>
        <td><%= apartamento.torre %></td>
        <td><%= apartamento.piso %></td>
        <td><%= apartamento.area %></td>
        <td><%= apartamento.residentes.count %></td>
        <td><%= apartamento.vehiculos.count %></td>
        <td><%= apartamento.valor_administracion %></td>
        <td><%= link_to 'Show', apartamento %></td>
        <td><%= link_to 'Edit', edit_apartamento_path(apartamento) %></td>
        <td><%= link_to 'Destroy', apartamento, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Apartamento', new_apartamento_path, class: 'btn btn-primary' %>
